<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="sports" class="com.capgemini.springcore.beans.Sports">
		<property name="name" value="Cricket"></property>
		<property name="totalPlayers" value="15"></property>
		<property name="teamInfo">
			<map>
				<entry key="India" value="Rohit Sharma"></entry>
				<entry key="Newzeland" value="Worner"></entry>
				<entry key="Sri Lanka" value="Dimuth Karunaratne"></entry>
			</map>
		</property>
	</bean>

</beans>