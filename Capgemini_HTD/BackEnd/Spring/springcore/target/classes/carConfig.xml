<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<context:component-scan base-package="com.capgemini.springcore"></context:component-scan>

	<!-- bean definitions here -->
	<bean id="myCar" class="com.capgemini.springcore.annotations.beans.Car">
		<property name="modelNo" value="1234" />
		<property name="modelName" value="My Model" />

	</bean>
</beans>